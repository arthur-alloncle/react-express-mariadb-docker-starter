{
    "compilerOptions": {
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "target": "ES2022",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      // "skipLibCheck": true,
      // "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "declaration": true,
    },
    "ts-node": {
      "esm": true,
      "transpileOnly": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }