{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "mikro-orm": {
    "useTsNode": false
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "dev2": "nodemon --watch 'src/**/*.ts' --exec 'node --loader ts-node/esm' src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "create-migrations": "docker exec -it react-express-mariadb-docker-starter-backend-1 sh -c 'npm run build && npx mikro-orm migration:create'",
    "pull-migrations": "docker cp react-express-mariadb-docker-starter-backend-1:/code/migrations/. ./src/migrations/.",
    "play-migrations": "docker exec -it react-express-mariadb-docker-starter-backend-1 sh -c 'npx mikro-orm migration:up'",
    "reverse-migrations": "docker exec -it react-express-mariadb-docker-starter-backend-1 sh -c 'npx mikro-orm migration:down'",
    "mariadb": "docker exec -it react-express-mariadb-docker-starter-database-1 sh -c 'mariadb -u root -p starterpack'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mikro-orm/core": "^6.5.7",
    "@mikro-orm/mariadb": "^6.5.7",
    "@mikro-orm/migrations": "^6.5.7",
    "@mikro-orm/reflection": "^6.5.7",
    "@types/cors": "^2.8.19",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mikro-orm": "^6.5.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.5.7",
    "@tsconfig/node-lts": "^22.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
